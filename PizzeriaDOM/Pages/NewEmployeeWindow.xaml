<Window x:Class="PizzeriaDOM.Pages.NewEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzeriaDOM.Pages"
        mc:Ignorable="d"
        Title="NewEmployeeWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<!-- Row for TextBlock -->
			<RowDefinition Height="Auto" />
			<!-- Row for TextBox 1 -->
			<RowDefinition Height="Auto" />
			<!-- Row for TextBox 2 -->
			<RowDefinition Height="Auto" />
			<!-- Row for Button -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<!-- Column for Labels (optional) -->
			<ColumnDefinition Width="*" />
			<!-- Column for Controls -->
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="New Employee's Informations" HorizontalAlignment="Center" VerticalAlignment="Center" />

		<Label Grid.Row="1" Grid.Column="0" Content="Name" VerticalAlignment="Center" />
		<TextBox Grid.Row="1" Grid.Column="1" Name="EmployeeName" Width="200" />

		<Button Grid.Row="3" Grid.Column="1" Click="Submit_Click" Content="Submit" HorizontalAlignment="Center" VerticalAlignment="Center" />
	</Grid>
</Window>
