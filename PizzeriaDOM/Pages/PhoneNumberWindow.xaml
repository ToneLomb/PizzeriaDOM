<Window x:Class="PizzeriaDOM.Pages.PhoneNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzeriaDOM.Pages"
        mc:Ignorable="d"
        Title="PhoneNumberWindow" 
        ResizeMode="NoResize"
        Width="200"
        SizeToContent="Height"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Center" x:Name="LabelPhoneNumber" Margin="0,8,0,51">Customer's phone number:</Label>
        <TextBox Name="TextPhoneNumber" Margin="36,46,36,28" KeyDown="TextBox_KeyDown"></TextBox>
    </Grid>
</Window>
